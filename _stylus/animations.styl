/**
    => animations
--------------------------------------------------*/
@keyframes spin {
    from { transform: rotateY(0); }
    to   { transform: rotateY(-360deg); }
}
@keyframes fadeInLeft
    from
        opacity: 0
        transform: translateX(10px)
    to
        opacity: 1
        transform: translateX(0)

@keyframes fadeInTop
    from
        opacity: 0
        transform: translateY(10px)
    to
        opacity: 1
        transform: translateY(0)

