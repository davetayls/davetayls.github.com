
.postheader
  position relative
  margin-bottom $baseline--doublepx

  h1
    background: #000;
    height: auto;
    margin: 0;
    padding: $baseline--doublepx;
    z-index: 2;
    font-weight 900
    letter-spacing -0.05em

    @media (min-width: 600px)
      background: rgba(#000, 0.8);
      max-width: 65%;
      position absolute
      bottom 10%
      left 0

    a
    time
      display: block;
      color #fff

    time
      text-transform: uppercase;
      font-size: 0.75em;
      font-weight 300
      line-height: 1.75;

  &__comment
    display inline-block
    background #555
    padding $baseline--px
    text-transform uppercase

    a
      &, &:link, &:visited
        font-weight bold
        color #fff

