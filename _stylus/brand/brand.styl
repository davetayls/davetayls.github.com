/*
    brand.css
    - These styles are used to set basic elements to fit to a brand.
    - It should be able to be added to a page no matter what the media type to set the brand.
    - It must not contain layout styles [ie margins,position,padding,display]. It would be used for: colors, text, fonts
    - It must not contain ids, only elements and classes

    These elements should be in a rough alphabetical order
*/


/*
    => fonts
--------------------------------------------------*/
custom-font('icons', '/lib/icons/font/icons')
.font-family--sans
    font-family: "Lato", Tahoma, Arial, Helvetica, "Nimbus Sans L", "Free Sans", Sans-Serif;
.font-family--serif
    font-family: Georgia, Serif;

/*
    Document Elements
----------------------------------------------------*/

/* maxvoltar.com/archive/-webkit-font-smoothing */
html { -webkit-font-smoothing: antialiased; }
/* always force a scrollbar in non-IE */
html { overflow-y: scroll; }

/* set global font family */
body, select, input, textarea {
    @extend .font-family--sans;
}
body        {
    color: #444;
    font-size: 125%; /*17px*/
    font-weight 300
    line-height: 1.5;
    backface-visibility: hidden;
}
body.acc-med    { font-size: 0.92em; }
body.acc-large  { font-size: 1.1em; }


/* hand cursor on clickable input elements */
label, input[type=button], input[type=submit], button { cursor: pointer; }

/* These selection declarations have to be separate.
   No text-shadow: twitter.com/miketaylr/status/12228805301
   Also: hot pink. */
::-moz-selection{ background: #009cc7; color:#fff; text-shadow: none; }
::selection { background:#009cc7; color:#fff; text-shadow: none; }

/* Accessible focus treatment: people.opera.com/patrickl/experiments/keyboard/test */
a { outline: none; }
a:active, a:hover { outline: none; }

a {
    -webkit-transition: all .1s ease-in-out;
}
a, a:visited, a:link      { color: #00ADEF; text-decoration: none; }
a:focus,
a:hover, a:active     {
    color: #333;
}
a img { border: none; }

/*  j.mp/webkit-tap-highlight-color */
a:link { -webkit-tap-highlight-color: rgba(255,255,255,0); }

// abbr        {}
// address     { }
blockquote {
    @extend .font-family--serif

    position: relative;
    p {
        color: #000;
        font-size: 1.7em;
        line-height: 1;
        padding: 0 20px 15px;
        font-style: italic;
        letter-spacing: -0.04em;
    }
    &:before {
        content: 'â€œ';
        font-style: italic;
        font-size: 4em;
        position: absolute;
        top: -16px;
        left: -12px;
        width: 1em;
    }
}

/* bicubic resizing for non-native sized IMG:
   code.flickr.com/blog/2008/11/12/on-ui-quality-the-little-things-client-side-image-resizing/ */
img { -ms-interpolation-mode: bicubic; }
object,
embed,
img { max-width: 100%; }


p           { margin: 0; padding: 0 0 15px; }
article p   { text-align: justify; }

pre {
    white-space: pre; /* CSS2 */
    white-space: pre-wrap; /* CSS 2.1 */
    word-wrap: break-word; /* IE */
}
// strong      {}
small { font-size:85%; }

/* normalize monospace sizing
 * en.wikipedia.org/wiki/MediaWiki_talk:Common.css/Archive_11#Teletype_style_fix_for_Chrome
 */
pre, code, kbd, samp { font-family: monospace, sans-serif; }


/*
    headers
----------------------------------------------------*/
/* www.aestheticallyloyal.com/public/optimize-legibility/ */
h1,h2,h3,h4,h5,h6 { font-weight: bold; text-rendering: optimizeLegibility; }
h1     {
    color:#000;
    font-size: 2.375em; /* 24px */
    font-weight: normal;
    letter-spacing: 0.003em;
    line-height: 1; /* 36px */
    margin: 0;
    padding: 0 0 10px;

    time {
        color: #888;
        text-transform: uppercase;
        font-size: 0.473684210526em;
    }
}
h1 a,
h1 a:visited,
h1 a:link {
    color: #000;
}

h2     {
    color:#777;
    font-size:1.429em; /* 20px */
    font-weight:normal;
    font-style: normal;
    letter-spacing:-0.008em;
    line-height: 1.35;
    margin: 0;
    padding: 15px 0 5px;
}
h3     {
    font-size: 1.1em;
    font-weight: bold;
    margin-bottom: 8px;
}
// h4     { }
h5          {
    margin: 0 0 5px;
}
// h6          { }

