@import "tweet_list";

@media screen and (max-width: 550px) {

	body {
		overflow: hidden;
		position: relative;
	}

/**
	=> structure
	--------------------------------------------------*/

	.menu ul {
		list-style: none outside none;
		margin: 10px 0 0;
		padding: 0;
	}
	.menu ul li {
		border: solid 1px #ddd;
		border-bottom: none;
		padding: 0px;
		overflow: hidden;
	}
	.menu ul li:last-child {
		border-bottom: solid 1px #ddd;
	}
	.menu ul li a {
		display: block;
		padding: 6px;
	}

	#related h1 {
		/* visually hidden */ position:absolute; display: block; top: -10000px; left: -10000px; width: 1px; height: 1px; overflow: hidden;
	}
	#related {
		position: absolute;
		top: 0;
		left: 104%;
		width: 62%;
		padding-top: $baseline--px;
	}


}

/*
	=> min
--------------------------------------------------*/
@media screen and (min-width:768px) and (max-width:1000px) {
	#contentWrapper {
		padding: 16px 0 16px 32px;
	}
	#content {
		position: relative;
		left: 50%;
		float: left;
		width: 568px;
		margin-left: -375px;
		transition: left .3s ease, margin-left .3s ease;
	}
	#related {
		float: right;
		padding: 0 16px 0 0;
		width: 116px;
		font-size: 0.75em;
	}
	#related h2 {
		/*font-size: 1.125em;*/
	}
}

/**
=> min-width 1000px screens
--------------------------------------------------*/
@media screen and (min-width:1000px) {

	/**
	=> structure
	--------------------------------------------------*/
	#contentWrapper {
		width: 980px;
		margin: 0 auto;
		padding: 0 0 16px;
	}
	#content {
		float: left;
		width: 640px;
	}
	#related {
		float: right;
		padding: 0;
		width: 260px;
	}
	#related p {
		font-size: 0.75em;
	}
	#pageFooter {
		clear: both;
	}
	#pageFooter-inner {
		width: 980px;
	}
}


