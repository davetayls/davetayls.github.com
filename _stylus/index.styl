	}
	#content {
		float: left;
		width: 568px;
	}
	#related {
		float: right;
		padding: 0 16px 0 0;
		width: 116px;
		font-size: 0.75em;
	}
	#related h2 {
		/*font-size: 1.125em;*/
	}
}

/**
=> min-width 1000px screens
--------------------------------------------------*/
@media screen and (min-width:1000px) {

	/**
	=> structure
	--------------------------------------------------*/
	#contentWrapper {
		width: 980px;
		margin: 0 auto;
		padding: 16px 0;
	}
	#content {
		float: left;
		width: 640px;
	}
	#related {
		float: right;
		padding: 0;
		width: 260px;
	}
	#related p {
		font-size: 0.75em;
	}
	#pageFooter {
		clear: both;
	}
	#pageFooter-inner {
		width: 980px;
	}
}


